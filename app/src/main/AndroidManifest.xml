<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gainztime">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GainzTime">
        <activity
            android:name=".activities.CameraActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CurrentWorkoutActivity"
            android:exported="true" />
        <activity
            android:name=".activities.WorkoutProgression"
            android:exported="true" />
        <activity
            android:name=".activities.WorkoutDaysActivity"
            android:exported="true" />
        <activity
            android:name=".activities.WorkoutConfigActivity"
            android:exported="true" />
        <activity
            android:name=".activities.InscriptionActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>